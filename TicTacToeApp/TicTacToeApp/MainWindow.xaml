<Window x:Class="TicTacToeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeApp"
        mc:Ignorable="d"
        Title="MainWindow" Width="200" SizeToContent="Height">
    <StackPanel>
        <Label FontSize="12" Content="{Binding Message}" HorizontalContentAlignment="Center"/>
        <ItemsControl ItemsSource="{Binding Grid}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" MouseDown="OnClick"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label FontSize="12" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" Content="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>
