<Window x:Class="CharacterFrequencyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterFrequencyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Name="Open" Content="Open File" Click="OnClick"/>
        <ScrollViewer Height="300">
            <TextBox Text="{Binding Input}" MinLines="5" TextWrapping="Wrap" Margin="5,5,5,5"/>
        </ScrollViewer>
        <Button Name="Count" Content="Count" Click="OnClick"/>
        <ScrollViewer Height="100">
        <ItemsControl ItemsSource="{Binding Freqs}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Key}"/>
                        <Label Content="{Binding Value}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</Window>
