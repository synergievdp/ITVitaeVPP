<UserControl x:Class="CabFareApp.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CabFareApp"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <ComboBox ItemsSource="{Binding Hours}" SelectedValue="{Binding Hour}" ItemStringFormat="D2"/>
        <ComboBox ItemsSource="{Binding Minutes}" SelectedValue="{Binding Minute}" ItemStringFormat="D2"/>
    </StackPanel>
</UserControl>
