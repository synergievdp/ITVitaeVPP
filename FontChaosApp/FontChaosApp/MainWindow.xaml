<Window x:Class="FontChaosApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FontChaosApp"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="Height" Width="800">
    <StackPanel>
        <ScrollViewer Height="100">
            <TextBox Text="{Binding Input}" TextWrapping="Wrap" MinLines="5" Margin="5,5,5,5"/>
        </ScrollViewer>
        <Button Content="Build" Click="OnClick" Margin="5,5,5,5"/>
        <ScrollViewer Height="200">
            <RichTextBox IsReadOnly="True" FontSize="20" x:Name="RichText" Margin="5,5,5,5"/>
        </ScrollViewer>
    </StackPanel>
</Window>
